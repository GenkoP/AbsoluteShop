.container
	.row
		div.col-md-2.col-md-offset-5.login-form
			form.form-horizontal(ng-hide="identity.isAuthenticated()" , name="loginForm")
					.form-group
						label(for="username") User name
						input.form-control(type="text" , placeholder="User name" , ng-model="user.username" , name="username" required)
					.form-group
						label(for="password") Password
						input.form-control(type="password" , placeholder="Password" , ng-model="user.password" , name="password" required)
					button.btn.btn-primary.btn-lg.btn-block(ng-click="login(user)" , ng-disabled="loginForm.$invalid") Login