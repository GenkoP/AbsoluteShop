extends includes/layout
block main-content
	div.navbar.navbar-inverse.navbar-fixed-top
		div.container
			div.navbar-header
				a.navbar-brand(href="#/") Absolute
			div.navbar-collapse.collapse
				ul.nav.navbar-nav
					li.dropdown
						a.dropdown-toggle(href="#/") Home
				.navbar-right(ng-controller="LogInController")			
					ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
						li.dropdown
							a.dropdown-toggle(href="" , data-toggle="dropdown")
								| {{ identity.currentUser.firstName + ' ' + identity.currentUser.lastName }}
								span.caret
							ul.dropdown-menu
								li(ng-show="identity.isAuthenticated()")
									a(href="#/admin/adminpanel") Admin panel
								li
									a(href="#/" ng-click="logout()") Log out
	section
		div(ng-view)
	footer.text-center
		p &copy; Genko Petrov