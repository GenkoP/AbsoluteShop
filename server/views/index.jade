extends includes/layout
block main-content
	div.navbar.navbar-inverse.navbar-fixed-top
		div.container
			div.navbar-header
				a.navbar-brand(href="#/") Absolute
			div.navbar-collapse.collapse
				ul.nav.navbar-nav
					li.dropdown
						a.dropdown-toggle(href="#/") Home 
					li
						a(href="#/gallery") Gallery
					li
						a(href="#/promotions") All promotions
					li
						a(href="#/admin/images") Add image
				.navbar-right(ng-controller="LogInController")
					div(ng-show="identity.isAuthenticated()")
						ul.nav.navbar-nav.navbar-right
							li.dropdown(dropdown)
								a.dropdown-toggle( dropdown-toggle, ng-disabled="disabled")
									| {{ identity.currentUser.firstName + ' ' + identity.currentUser.lastName }}
									span.caret
								ul.dropdown-menu(role="menu")
									li
										a(href="#/admin/info") Information
									li
										a(href="#/admin/images" ) Add new image
									li
										a(href="#/admin/promotion" ) Promotions
									li
										a(href="#/admin/tasks" ) Tasks
									li.divider
									li
										a(href="#/" ng-click="logout()") Log out
	section
		div(ng-view)
	footer.text-center
		p &copy; Genko Petrov